<div class="grid-x grid-margin-x">
  <div class="medium-9 large-9 auto large-offset-4 cell">
  <p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>
</div>
<div class="medium-9 large-9 large-offset-1 cell">
<p>
  <strong>Text:</strong>
  <%= @article.body %>
</p>
</div>
</div>
<div class="grid-x grid-margin-x">
  <div class="small-4 large-offset-1 cell">
<h4>Comments</h4>
<% @article.comments.each do |comment| %>
  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>
<%end%>
<h5>Add a comment:</h5>
<%= form_with(model: [ @article, @article.comments.build ], local: true) do |form| %>
    <label>
    <%= form.text_area :body %>
  </label>
    <%= form.submit %>
  <%end%>
<%= link_to 'Back', articles_path %>
</div>
</div>
