<div class="row ">
  <div class="col-md-7">
    <h5>Add a comment:</h5>

<%= form_with(model: [ @article, @article.comments.build ], local: true) do |form| %>
<div class="form-group">
<%= form.text_area :body, class: 'form-control', rows: 5, placeholder: "Content" %>
<%= form.hidden_field :user_id, :value => current_user.id%>
</div>
<div class="form-group">
<%= recaptcha_tags %>
</div>
<div class="form-inline">

<%= form.submit "Submit", class: 'btn btn-primary' %>
<%= link_to 'Back to all articles', articles_path, class:'btn btn-primary' %>
</div>
<%end%>
</div>
</div>
