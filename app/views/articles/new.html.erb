  <%= form_with scope: :article, url: articles_path, local: true do |form| %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </p>
  <p>
    <%= form.label :category_id %><br>
    <% category_array = Category.all.map {|category| [category.name,category.id]} %>
    <%= select(:article, :category_id, options_for_select(category_array)) %>
  </p>
<p>You can set time of published</p>
  <p>
    <%= form.label :published_at %><br>
    <%= form.date_field :published_at %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>
<%= link_to 'Back', articles_path %>
